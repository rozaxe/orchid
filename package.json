{
    "name": "r-orchid",
    "version": "0.1.0",
    "main": "build/index.css",
    "files": [
        "build"
    ],
    "scripts": {
        "prepare": "yarn build",
        "post": "postcss src/index.css -d build",
        "build": "mkdir -p build && cp ./{colors.js,theme.js,tailwind.config.js} ./build/ && parcel build src/index.css --dist-dir build",
        "build:web": "parcel build example/index.html -d public --public-url ./",
        "start": "parcel -p 8080 example/index.html",
        "postversion": "git push && git push --tags"
    },
    "devDependencies": {
        "@fortawesome/fontawesome-free": "^5.14.0",
        "autoprefixer": "^10.0.4",
        "cssnano": "^4.1.10",
        "highlight.js": "^10.2.0",
        "htm": "^3.0.4",
        "parcel": "^2.0.0-nightly.462",
        "postcss": "^8.1.10",
        "postcss-cli": "^8.3.0",
        "postcss-import": "^13.0.0",
        "postcss-nested": "^5.0.1",
        "preact": ">=10",
        "preact-render-to-string": "^5.1.12",
        "sass": "^1.26.11",
        "tailwindcss": "^2.0.1",
        "typeface-inter": "^3.12.0"
    },
    "peerDependencies": {
        "typeface-inter": "^3.12.0"
    }
}
